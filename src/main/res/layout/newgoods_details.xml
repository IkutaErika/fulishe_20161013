<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/top_menu"
        android:background="@color/orange"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:id="@+id/iv_top_menu_back"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/back"
                />
            <TextView
                android:layout_toRightOf="@id/iv_top_menu_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:textColor="@color/white"
                android:text="商品详情"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:id="@+id/iv_details_menu_share"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/selector_share_bg"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />
            <ImageView
                android:id="@+id/iv_details_menu_collected"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/bg_collect_in"
                android:layout_toLeftOf="@id/iv_details_menu_share"
                android:layout_marginRight="10dp"
                />
            <ImageView
                android:id="@+id/iv_details_menu_cart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/bg_cart_selected"
                android:layout_toLeftOf="@id/iv_details_menu_collected"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_below="@id/top_menu"
        android:id="@+id/tv_goodsdetails_englishname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monbento"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        />
    <TextView
        android:id="@+id/tv_goodsdetails_goodsname"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_goodsdetails_englishname"
        android:text="双层分格饭盒 绿色"
        />
    <TextView
        android:id="@+id/tv_newgoods_goodsprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_goodsdetails_englishname"
        android:layout_toRightOf="@id/tv_goodsdetails_goodsname"
        android:text="￥200"
        android:layout_marginTop="15dp"
       android:layout_marginLeft="75dp"
      android:textColor="@color/red"
        />
<RelativeLayout
    android:id="@+id/LL_goodsdetails"
    android:layout_width="300dp"
    android:layout_height="270dp"
    android:layout_below="@id/tv_goodsdetails_goodsname"
    android:layout_centerHorizontal="true"
    >
    <ucai.cn.fulishe.Views.SlideAutoLoopView
        android:id="@+id/vp_goodsdetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:background="@color/good_detail_bg_white"
   />
    <ucai.cn.fulishe.Views.FlowIndicator
        android:id="@+id/newgoodsdetails_flowindicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:count="3"
        app:r="10dp"
        app:space="8dp"
        app:normal_color="#ccc"
        app:focus_color="#f60"
        app:focus="0"
        />
</RelativeLayout>
    <ScrollView
        android:id="@+id/sv_newgoodstext"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/LL_goodsdetails"
        >
        <TextView
            android:id="@+id/tv_newgoods_details"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="PP食品级材质，轻巧、易清洗、蠕变性小，
         不易变形，可置于微波炉加热，可方巾洗碗机清洗。
         双层色彩可以随意组合，轻巧方便"
            />

    </ScrollView>

</RelativeLayout>