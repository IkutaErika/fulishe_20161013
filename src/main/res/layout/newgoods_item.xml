<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_newgoods_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<ImageView
    android:id="@+id/iv_newgoods"
    android:src="@mipmap/goods_thumb"
    android:layout_margin="10dp"
    android:layout_width="200dp"
    android:layout_height="200dp" />
    <TextView
        android:id="@+id/tv_name_newgoods"
        android:layout_below="@id/iv_newgoods"
        android:layout_width="wrap_content"
        android:textSize="15dp"
        android:layout_height="wrap_content"
        android:text="劲霸男装"
        android:layout_marginLeft="40dp"
        />
    <TextView
        android:id="@+id/tv_price_newgoods"
        android:layout_below="@id/tv_name_newgoods"
        android:layout_width="wrap_content"
        android:textSize="13dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="￥222"
        android:textColor="@color/red"
        android:layout_marginLeft="45dp"
        />

</RelativeLayout>