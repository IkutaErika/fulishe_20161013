<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/tab_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/iv_top_menu_back"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back"
            />
        <TextView
            android:layout_toRightOf="@id/iv_top_menu_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:textColor="@color/white"
            android:text="商品详情"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/iv_top_menu_share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/selector_share_bg"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
        <ImageView
            android:id="@+id/iv_top_menu_collected"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/bg_collect_in"
             android:layout_toLeftOf="@id/iv_top_menu_share"
            android:layout_marginRight="10dp"
            />
        <ImageView
            android:id="@+id/iv_top_menu_cart"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/bg_cart_selected"
             android:layout_toLeftOf="@id/iv_top_menu_collected"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>
</LinearLayout>