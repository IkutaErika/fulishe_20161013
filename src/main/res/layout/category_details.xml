<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/tab_bg"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/iv_top_menu_back"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back"
            />
        <ucai.cn.fulishe.Views.CatChildFilterButton
            android:id="@+id/btnCatChildFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="10dp"
            android:drawableRight="@drawable/arrow2_up"
            android:background="@null"
            android:textColor="@color/white"
            android:text="分类"
            android:textSize="20dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/holo_orange_light"
        >
        <Button
            android:id="@+id/category_details_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="价格"
            android:textSize="20dp"
            android:layout_marginRight="5dp"
            android:drawableRight="@drawable/arrow_order_down"
            android:background="@color/holo_orange_light"
            />
        <Button
            android:id="@+id/category_details_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="上架时间"
            android:textSize="20dp"
            android:layout_marginLeft="5dp"
            android:drawableRight="@drawable/arrow_order_up"
            android:background="@color/holo_orange_light"
            />
    </LinearLayout>
   <include layout="@layout/fragment_new_goods" android:id="@+id/category_details_srl"></include>
</LinearLayout>