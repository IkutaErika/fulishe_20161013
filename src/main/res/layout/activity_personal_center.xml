<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/gray_normal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/center_personal"
    tools:context="ucai.cn.fulishe.activity.Personal_center">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <ImageView
        android:id="@+id/back_personal_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/back_press"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_centerVertical="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.AlertDialog.AppCompat"
        android:text="个人资料"
        android:textSize="20sp"
        android:layout_centerInParent="true"

        />
</RelativeLayout>
 <View
     android:layout_width="match_parent"
     android:layout_height="1dp"
     style="@style/style_divide_line"
     />
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="100dp"
      android:layout_marginTop="20dp"
      >
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="用户头像"
       android:textAppearance="@style/Base.AlertDialog.AppCompat"
       android:textSize="18sp"
       android:layout_centerVertical="true"
       android:layout_marginLeft="20dp"
       />
      <ImageView
          android:id="@+id/personal_center_iv_logo"
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:src="@drawable/contactlogo"
          android:layout_alignParentRight="true"
          android:layout_marginRight="30dp"
          android:layout_marginTop="10dp"
          />
      <ImageView
          android:id="@+id/iv_personal_center_back_logo1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@mipmap/arrow2_right"
          android:layout_alignParentRight="true"
          android:layout_marginRight="8dp"
          android:layout_centerVertical="true"
          />
  </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        style="@style/style_divide_line"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:textAppearance="@style/Base.AlertDialog.AppCompat"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/personal_center_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:text="a952700"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/tv_personal_center_back_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/arrow2_right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        style="@style/style_divide_line"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textAppearance="@style/Base.AlertDialog.AppCompat"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/personal_center_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:text="士大夫123"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/tv_personal_center_back_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/arrow2_right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        style="@style/style_divide_line"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/personal_center_quit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tab_bg"
            android:text="退出"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
</LinearLayout>
